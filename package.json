{
  "name": "projecthub",
  "version": "1.0.0",
  "description": "ProjectHub - SaaS Multi-Tenant Project Management Platform",
  "scripts": {
    "dev": "npm run frontend:dev",
    "dev:with-backend": "node dev-server.js",
    "frontend:dev": "cd frontend && npm run dev",
    "backend:dev": "cd backend && npm run start:dev",
    "build": "concurrently \"npm run backend:build\" \"npm run frontend:build\"",
    "backend:build": "cd backend && npm run build",
    "frontend:build": "cd frontend && npm run build",
    "start": "concurrently \"npm run backend:start\" \"npm run frontend:preview\"",
    "backend:start": "cd backend && npm start",
    "frontend:preview": "cd frontend && npm run preview"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "frontend",
    "backend"
  ]
}