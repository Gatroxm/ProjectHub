meta {
  name: Refresh Token
  type: http
  seq: 4
}

post {
  url: {{baseUrl}}/auth/refresh
  body: none
  auth: bearer
}

auth:bearer {
  token: {{token}}
}

tests {
  test("should return 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
}

script:post-response {
  if (res.body && res.body.access_token) {
    bru.setEnvVar("token", res.body.access_token);
  }
}